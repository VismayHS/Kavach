# RAKSHAK Backend Environment Variables
# Copy this to .env and fill in your values

# MongoDB Atlas
MONGODB_URI=mongodb+srv://user:password@cluster.xxxxx.mongodb.net/rakshak?retryWrites=true&w=majority
MONGODB_DB=rakshak

# AWS Cognito (for JWT verification)
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# AWS SES (free-tier email notification)
SES_SENDER_EMAIL=alerts@yourdomain.com
SES_REGION=us-east-1

# S3 Evidence Bucket
S3_EVIDENCE_BUCKET=rakshak-evidence
S3_REGION=us-east-1
